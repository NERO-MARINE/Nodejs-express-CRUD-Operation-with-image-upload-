<!DOCTYPE html>
<html lang="en">
    <!-- head -->
  <%- include('./partials/head')  %> 
<body>
    <!-- nav -->
    <%- include('./partials/nav')  %> 
    <div class="container">
        <% if (users.length > 0) { %>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Image</th>
                    <th scope="col">name</th>
                    <th scope="col">email</th>
                    <th scope="col">phone</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>

                    <% users.forEach(user => { %>
                        <tr>
                            <th scope="row">1</th>
                            
                            <td><img class="img-thumbnail" src="<%= user.image %>" alt="<%= user.name %>" width="50"> </td>
                            <td><%= user.name %> </td>
                            <td><%= user.email %> </td>
                            <td><%= user.phone %> </td>
                            <td>
                                <a href="/edit/<%= user._id %>"><i class="bi bi-pen"></i></a>

                                <form action="/delete/<%= user._id %>?_method=DELETE" method="POST">
                                    <button class="mt-2"><i class="bi bi-archive-fill"></i></button>
                                </form>
                              
                              
                            </td>
                          </tr>
                         
                    <% }) %>

                </tbody>
              </table>

     <% } else { %>  
           <div class="container">
               <h1 class="text-center">No users</h1>
           </div>
        <% } %>
   
         
       
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>